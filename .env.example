# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aladdin
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=aladdin
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# NATS Configuration
NATS_URL=nats://localhost:4222

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Service Ports
PORT=3000
MARKET_DATA_PORT=3001
TRADING_PORT=3002
PORTFOLIO_PORT=3003
ANALYTICS_PORT=3004
SCREENER_PORT=3005
SCRAPER_PORT=3018
ML_SERVICE_PORT=3019

# OpenAI Configuration (Optional - для улучшенного sentiment analysis)
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_MODEL=gpt-4o
# Если не указано, автоматически включается при наличии ключа
# Установите false чтобы отключить даже при наличии ключа
OPENAI_SENTIMENT_ENABLED=true

# Sentiment Analysis Mode
# Если есть OPENAI_API_KEY:
# - ai: ВСЕ сообщения анализируются через GPT (по умолчанию с ключом)
# - hybrid: выборочное использование GPT (экономия средств)
# - keyword: отключить GPT, только keyword анализ
# Без ключа: всегда keyword
SENTIMENT_MODE=ai

# AI Configuration
AI_CACHE_TTL_HOURS=24
AI_MAX_BATCH_SIZE=10
AI_MAX_REQUESTS_PER_HOUR=100
AI_MAX_REQUESTS_PER_MINUTE=10

# Hybrid Analyzer Thresholds
# GPT используется для твитов/постов с engagement >= этого порога
AI_HIGH_ENGAGEMENT_THRESHOLD=50
# GPT используется когда keyword confidence < этого порога
AI_LOW_CONFIDENCE_THRESHOLD=0.3

# Exchange API Keys (Optional)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Environment
NODE_ENV=development
LOG_LEVEL=info

