{
  "name": "@aladdin/server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@aladdin/auth": "workspace:*",
    "@aladdin/core": "workspace:*",
    "@aladdin/database": "workspace:*",
    "@aladdin/gateway": "workspace:*",
    "@aladdin/http": "workspace:*",
    "@aladdin/logger": "workspace:*",
    "@aladdin/messaging": "workspace:*",
    "@aladdin/service": "workspace:*",
    "@aladdin/validation": "workspace:*",
    "better-auth": "^1.3.13",
    "nats": "^2.28.2",
    "dotenv": "^17.2.1",
    "hono": "^4.8.2",
    "hono-rate-limiter": "^0.4.2",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsdown": "^0.15.1",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6"
  }
}
