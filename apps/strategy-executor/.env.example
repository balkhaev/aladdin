# Strategy Executor Service Configuration

# Service Port
PORT=3019

# Execution Mode (PAPER or LIVE)
# PAPER = Simulate trades without real money
# LIVE = Execute real trades on exchange
EXECUTOR_MODE=PAPER

# Auto Execution
# Set to false to manually approve each trade
AUTO_EXECUTE=true

# Risk Management
MAX_OPEN_POSITIONS=5

# Default Trading Configuration
DEFAULT_USER_ID=your_user_id_here
DEFAULT_PORTFOLIO_ID=your_portfolio_id_here
DEFAULT_EXCHANGE=binance

# External Services
TRADING_SERVICE_URL=http://localhost:3011
PORTFOLIO_SERVICE_URL=http://localhost:3012
RISK_SERVICE_URL=http://localhost:3013
MARKET_DATA_SERVICE_URL=http://localhost:3010

# NATS Configuration
NATS_URL=nats://nats.balkhaev.com:4222

# Logging
LOG_LEVEL=info
NODE_ENV=development

